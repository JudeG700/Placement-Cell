<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


  <div class="container">
    <div class="col" style="margin-bottom: 30px; margin-top: 30px;">
        <div class="row justify-content-md-center">
            <div class="col-lg-8">
                <div class="card card-custom">
                    <div class="card-header">
                        <h1>Sign Up</h1>
                    </div>
                    <div class="card-body">
                      <form action="/admin_signup" method="POST">
                        <label for="fname" style="font-size: 24px; margin-top: 20px; margin-bottom: 5px;">First name:</label><br>
                        <input type="text" id="fname" name="fname" class="form-control" required><br>
                        <label for="lname" style="font-size: 24px; margin-top: 20px; margin-bottom: 5px;">Last name:</label><br>
                        <input type="text" id="lname" name="lname" class="form-control" required><br>
                        <label for="email" style="font-size: 24px; margin-top: 20px; margin-bottom: 5px;">Email:</label><br>
                        <input type="text" id="email" class="email" name="email" required><br>
                        <label for="password" style="font-size: 24px; margin-top: 20px; margin-bottom: 5px;">Password:</label><br>
                        <input type="password" id="password" name="password" required><br>
                        <label for="repassword" style="font-size: 24px; margin-top: 20px; margin-bottom: 5px;">Re-type Password:</label><br>
                        <input type="password" id="repassword" name="repassword" required><br>
                        <label for="Number" style="font-size: 24px; margin-top: 20px; margin-bottom: 5px;">Phone number:</label><br>
                        <input type="number" id="number" name="number" required><br>
                          <label for="Company" style="font-size: 24px; margin-top: 20px; margin-bottom: 45px;">Company: </label>
                          <select id="company" name="company" required>
                            <script>
                              fetch("/companies.json")
                                .then(response => response.json())
                                .then(values => 
                                {  //help from ChatGPT but I understand how this works
                                  values.forEach(value => 
                                  {
                                    console.log(value.Company_Name)
                                    const option = document.createElement("option");
                                    option.value = value.Company_Name;  // Set the value of the option
                                    option.textContent = value.Company_Name;  // Set the display text of the option

                                    document.getElementById("company").appendChild(option);
                                  });
                                })
                                .catch(error => console.error("Nooo"));
                                
  
                            </script>
                            
                            
                          </select><br>
                        <button type="submit" value="Continue">Continue</button>
                        <% if (message) { %>
                          <div class="alert alert-warning">
                            <p><%= message %></p>
                          </div>
                        <% } %> 
                      </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>

</body>
</html>

